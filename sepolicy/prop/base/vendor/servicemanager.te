# ==============================================
# MTK Policy Rule
# ==============================================

# rild Bringup Policy
allow servicemanager rild:dir search;
allow servicemanager rild:file r_file_perms;
allow servicemanager rild:process getattr;
binder_call(servicemanager, mtk_hal_light)
binder_call(servicemanager, hal_vibrator_default)
binder_call(servicemanager, update_verifier)

# temporarily skip auditing binder call from servicemanager to hal_wifi_default
# revert this after Google patch merged
dontaudit servicemanager hal_wifi_default:binder call;

