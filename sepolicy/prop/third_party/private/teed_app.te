# ==============================================
# MTK Policy Rule
# ==============================================

type teed_app, domain;
typeattribute teed_app coredomain;

app_domain(teed_app)
binder_service(teed_app)
binder_use(teed_app)

add_service(teed_app, tee_service)

hal_client_domain(teed_app, hal_tee)
hal_client_domain(teed_app, hal_allocator)


allow teed_app teed_app_data_file:dir create_dir_perms;
allow teed_app teed_app_data_file:file create_file_perms;

allow teed_app app_api_service:service_manager find;
